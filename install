#!/bin/bash

if [[ $(id -u) -ne 0 ]] ; then
    echo "Please run as root"
    exit 1
fi

conffile=/etc/courier/imapd-ssl

if [ ! -f $conffile ]
then
    echo "$conffile not found, install courier-imap"
    exit 1
fi

./usr/local/bin/letsimap

if [ $? -eq 0 ]
then
    cp usr/local/bin/* /usr/local/bin/
    cp etc/cron.d/* /etc/cron.d/
fi
